@model MMU_MVC_CV.Models.Entity.TblAdmin
@{
    ViewBag.Title = "UpdateAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h4>Kullanıcı Bilgileri Güncelleme Sayfası</h4>
<br />
<form method="post">
    @Html.Label("ID")
    @Html.HiddenFor(x => x.ID, new { @class = "form-control" })
    <br />
    @Html.Label("Kullanıcı Adı")
    @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
    <br />
    @Html.Label("Şifre")
    @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Güncelle</button>
</form>
