@using MMU_MVC_CV.Models.Entity
@model List<TblSkills>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{ string color = "";}
@{ string labelcolor = "";}
<br />
<h2>TAMAMLANAN VE DEVAM EDEN EĞİTİMLER</h2>
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            
                            <!-- /.card-header -->
                            <div class="card-body">
                                <a href="/Skills/NewSkill/" class="btn btn-info">Yeni Eğitim Ekle</a>
                                <br />
                                <br />
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">#</th>
                                            <th>Eğitim</th>
                                            <th>Derece</th>
                                            <th style="width: 40px">Oran</th>
                                            <th>Düzenle</th>
                                            <th>Sil</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            if (item.Ratio >= 0 && item.Ratio <= 45)
                                            {
                                                color = "progress-bar bg-danger";
                                                labelcolor = "badge bg-danger";
                                            }
                                            if (item.Ratio >= 46 && item.Ratio <= 65)
                                            {
                                                color = "progress-bar bg-warning";
                                                labelcolor = "badge bg-warning";
                                            }
                                            if (item.Ratio >= 66 && item.Ratio <= 84)
                                            {
                                                color = "progress-bar bg-primary";
                                                labelcolor = "badge bg-primary";
                                            }
                                            if (item.Ratio >= 85 && item.Ratio <= 100)
                                            {
                                                color = "progress-bar bg-success";
                                                labelcolor = "badge bg-success";
                                            }



                                            <tr>
                                                <td>@item.ID</td>
                                                <td>@item.Skill</td>

                                                <td>
                                                    <div class="progress progress-xs">
                                                        <div class="@color" style="width: @item.Ratio%"></div>
                                                    </div>
                                                </td>
                                                <td><span class="@labelcolor">@item.Ratio%</span></td>
                                                <td>
                                                    <a class="btn btn-info btn-sm" href="/Skills/UpdateSkill/@item.ID">
                                                        <i class="fas fa-pencil-alt">
                                                        </i>
                                                        Düzenle
                                                    </a>
                                                </td>
                                                <td>
                                                    <a class="btn btn-danger btn-sm" href="/Skills/DeleteSkill/@item.ID">
                                                        <i class="fas fa-trash">
                                                        </i>
                                                        Sil
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!-- /.card -->
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>
</body>
</html>
